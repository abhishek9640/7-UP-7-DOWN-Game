{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/roll-dice", "dest": "server.js" },
      { "src": "/points", "dest": "server.js" },
      { "src": "/(.*)", "dest": "/client/build/index.html" }
    ]
  }
  